<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  {% block metadata %}{% endblock %}

  <link href="/css/bootstrap.min.css" rel="stylesheet" />
  <link href="/css/app.css" rel="stylesheet" />
</head>

<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">Addonis</a>

      <ul class="nav">
      {% for item in nav %}
        <li {% if item.active %}class="active"{% endif %}><a href="{{ item.url }}" title="{{ item.title }}">{{ item.label }}</a></li>
      {% endfor %}
      </ul>
    </div>
  </div>
</div>

<div class="container">
{% block content %}{% endblock %}
</div><!-- /.container -->

<script src="/js/libs/bootstrap.min.js"></script>
<script src="/js/libs/jquery.min.js"></script>
<script src="/js/libs/jquery.roland.js"></script>
<script src="/js/app.js"></script>
</body>
</html>